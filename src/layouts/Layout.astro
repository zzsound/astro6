---
// src/layouts/Layout.astro
import HamburgerMenu from '../components/HamburgerMenu6.astro';
import CookieBanner from '../components/CookieBanner.astro';
const baseUrl = import.meta.env.BASE_URL;

const navLinks = [
  { href: `${baseUrl}/`, text: "Home"},
  { href: `${baseUrl}01`, text: "Bluetooth MIDI Controller Pro"},
  { href: `${baseUrl}02`, text: "Grand Piano AUv3 2"},
  { href: `${baseUrl}03`, text: "4Waves Synthesizer"},
  { href: `${baseUrl}04`, text: "XYZ Synth"},
  { href: `${baseUrl}05`, text: "MicroGrandPiano"},
  { href: `${baseUrl}06`, text: "Bluetooth MIDI Keyboard"},
  { href: `${baseUrl}07`, text: "Bluetooth MIDI Controller"},
  { href: `${baseUrl}08`, text: "Bluetooth MIDI Pads"},
  { href: `${baseUrl}09`, text: "Bluetooth MIDI Motion"},
  { href: `${baseUrl}010`, text: "Grand Piano Auv3"},
  { href: `${baseUrl}011`, text: "Random Ocean"},
  { href: `${baseUrl}AppsPrivacyPolicy`, text: "Apps Privacy Policy"},
  { href: `${baseUrl}Privacy-policy`, text: "Privacy policy"},
  { href: `${baseUrl}Contact`, text: "Contact"}
];
---
<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Mi Sitio</title>
  <style>
    body {
      min-height: 100vh;
      display: flex;
      flex-direction: column;
      margin: 0;
    }
    main {
      flex: 1;
      padding-top: 80px;
    }
    header {
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      width: 100%;
      background: rgb(25, 79, 131);
      z-index: 1000;
    }
    footer {
      background: rgb(25, 79, 131);
      padding: 1.5rem;
      text-align: center;
      margin-top: auto;
    }
    .hamburger-menu a {
      font-size: clamp(0.4rem, 1vw, 0.5rem);
      color: #333;
      padding: 0.5rem 1rem;
    }
    @media (min-width: 768px) {
      .hamburger-menu a {
        font-size: 0.5rem;
      }
    }
  </style>
</head>
<body>
  <header style="height: 7%; display: flex; justify-content: space-between; align-items: center; padding: 1rem;">
    <h2 style="display: flex; align-items: center; gap: 1rem; flex: 1; justify-content: space-between; padding: 5%">
      <span><HamburgerMenu links={navLinks} fontClass="text-sh" /></span>
      <span><a href=`${baseUrl}/` style="padding: 1rem; color:white">PBLSound Apps</a></span>
    </h2>
  </header>

  <main>
    <slot />
    <CookieBanner />
    <footer style="height: 7%; display: flex; flex: 1; justify-content: space-between; align-items: center; padding: 1rem;">
      <p style="padding: 1rem; color:white">Â© 2020-2025 PBLSound. All rights reserved.</p>
      <nav>
        <a href={`${baseUrl}Privacy-policy`} style="padding: 1rem; color:white">Privacy policy</a> |
        <a href={`${baseUrl}Contact`} style="padding: 1rem; color:white">Contact</a>
      </nav>
    </footer>
  </main>

  {import.meta.env.PROD && (
    <script 
      type="text/partytown" 
      async 
      src={`https://www.googletagmanager.com/gtag/js?id=${import.meta.env.PUBLIC_GA_ID}`}
    ></script>
  )}
</body>
</html>